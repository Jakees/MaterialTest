<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.titan.materialtest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.titan.activities.MainActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.titan.activities.ActivityToSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity android:name="com.example.titan.activities.ActivityUsingTabLibrary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity android:name="com.example.titan.activities.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity android:name="com.example.titan.activities.ActivityRecyclerItemAnimations" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity android:name="com.example.titan.activities.ActivityYoukuSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity android:name="com.example.titan.activities.ActivityPlayYouku" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity
            android:name="com.example.titan.activities.ActivityCheckMyVideos"
            android:label="@string/title_activity_activity_check_my_videos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
        <activity
            android:name="com.example.titan.activities.ActivityRegister"
            android:label="@string/title_activity_activity_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.titan.activities.MainActivity" >
            </meta-data>
        </activity>
    </application>

</manifest>
